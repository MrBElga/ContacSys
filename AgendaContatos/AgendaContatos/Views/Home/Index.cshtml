@{
    ViewData["Title"] = "Página inicial";
}

<div class="container">
    <div class="welcome-section text-center p-5 bg-primary text-white rounded-3 mb-5">
        <h1 class="display-4">Bem-vindo a   o Sistema de Agenda de Contatos</h1>
        <p class="lead">Gerencie seus contatos de forma simples e eficiente.</p>
        <a asp-controller="Contatos" asp-action="Index" class="btn btn-light btn-lg">
            <i class="fas fa-users"></i> Comece Agora
        </a>
    </div>

    <div class="features-section text-center">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <div class="feature-icon mb-3">📇</div>
                        <h3 class="card-title">Adicionar Contatos</h3>
                        <p class="card-text">Adicione novos contatos de forma rápida e fácil.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <div class="feature-icon mb-3">🔍</div>
                        <h3 class="card-title">Buscar Contatos</h3>
                        <p class="card-text">Encontre contatos de forma rápida com nossa busca avançada.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <div class="feature-icon mb-3">📅</div>
                        <h3 class="card-title">Organize</h3>
                        <p class="card-text">Mantenha seus contatos organizados e sempre à mão.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>