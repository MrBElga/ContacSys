@model AgendaContatos.Models.Contato

@{
    ViewData["Title"] = "Editar Contato";
}

<h1 class="display-4">Editar Contato</h1>



<form asp-action="Edit" method="post" novalidate>
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" required>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-mail</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Digite um e-mail válido" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Celular" class="form-label">Celular</label>
        <input asp-for="Celular" type="tel" class="form-control" placeholder="(99) 99999-9999" pattern="\(\d{2}\) \d{5}-\d{4}" required>
        <span asp-validation-for="Celular" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

<!-- Adiciona suporte à validação do lado do cliente -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
